import java.util.*;
import java.sql.*;

public class ListSortDesc {
    private static final String URL = "jdbc:mysql://localhost:3306/mydatabase";
    private static final String USER = "root";
    private static final String PASSWORD = "root";

    public static void main(String[] args) {
        List<Integer> list = new ArrayList<>(100);
        Random rnd = new Random();
        for (int i = 0; i < 100; i++) {
            list.add(rnd.nextInt(100) + 1);
        }

        // Сортировка по убыванию
        list.sort(Collections.reverseOrder());

        // Вывод первых 10
        for (int i = 0; i < 10; i++) {
            System.out.print(list.get(i) + " ");
        }
        System.out.println();

        // Сохранение в БД
        try (Connection conn = DriverManager.getConnection(URL, USER, PASSWORD)) {
            String createSql = "CREATE TABLE IF NOT EXISTS sorted_nums("
                             + "id INT AUTO_INCREMENT PRIMARY KEY, "
                             + "value INT)";
            conn.createStatement().execute(createSql);
            conn.createStatement().execute("TRUNCATE TABLE sorted_nums");

            String insertSql = "INSERT INTO sorted_nums(value) VALUES (?)";
            try (PreparedStatement ps = conn.prepareStatement(insertSql)) {
                for (Integer val : list) {
                    ps.setInt(1, val);
                    ps.addBatch();
                }
                ps.executeBatch();
            }
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
